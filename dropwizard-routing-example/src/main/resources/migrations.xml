<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="1" author="mcarrier">
        <createTable tableName="barista">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="ingredient">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="recipe">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="instructions" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="recipe_ingredient">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="recipe_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="name" constraintName="barista_name_uq" tableName="barista"/>
        <addUniqueConstraint columnNames="name" constraintName="ingredient_name_uq" tableName="ingredient"/>
        <addUniqueConstraint columnNames="name" constraintName="recipe_name_uq" tableName="recipe"/>
        <addForeignKeyConstraint
            baseColumnNames="recipe_id"
            baseTableName="recipe_ingredient"
            constraintName="recipe_ingredient_recipe_id_fk"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="recipe"/>
        <addForeignKeyConstraint
            baseColumnNames="ingredient_id"
            baseTableName="recipe_ingredient"
            constraintName="recipe_ingredient_ingredient_id_fk"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="ingredient"/>

        <insert tableName="barista">
            <column name="name">matt</column>
        </insert>
        <insert tableName="ingredient">
            <column name="name">espresso</column>
        </insert>
        <insert tableName="ingredient">
            <column name="name">frothed milk</column>
        </insert>
        <insert tableName="recipe">
            <column name="name">latte</column>
            <column name="instructions">Brew espresso and fill with frothed milk.</column>
        </insert>
        <insert tableName="recipe_ingredient">
            <column name="recipe_id">1</column>
            <column name="ingredient_id">1</column>
        </insert>
        <insert tableName="recipe_ingredient">
            <column name="recipe_id">1</column>
            <column name="ingredient_id">2</column>
        </insert>
    </changeSet>
</databaseChangeLog>
